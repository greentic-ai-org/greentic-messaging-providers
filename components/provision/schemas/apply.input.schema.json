{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "plan": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "type": {
                "type": "string",
                "minLength": 1
              },
              "scope": {
                "type": "string",
                "minLength": 1
              },
              "key": {
                "type": "string",
                "minLength": 1
              },
              "value": {
                "type": [
                  "string",
                  "number",
                  "boolean",
                  "object",
                  "array",
                  "null"
                ]
              }
            },
            "required": [
              "type",
              "scope",
              "key"
            ]
          }
        }
      },
      "required": [
        "actions"
      ]
    },
    "dry_run": {
      "type": [
        "boolean",
        "string"
      ]
    }
  },
  "required": [
    "plan"
  ]
}
