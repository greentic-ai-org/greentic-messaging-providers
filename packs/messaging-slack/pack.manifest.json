{
  "name": "messaging-slack",
  "version": "0.4.8",
  "description": "Provider-core Slack messaging pack (chat.postMessage).",
  "kind": "messaging",
  "publisher": "Greentic",
  "config_schema": {
    "provider_config": {
      "format": "json",
      "path": "schemas/messaging/slack/config.schema.json"
    }
  },
  "components": [
    {
      "id": "messaging-provider-slack",
      "kind": "messaging",
      "version": "0.4.8",
      "world": "greentic:provider/schema-core@1.0.0",
      "supports": [
        "messaging"
      ],
      "profiles": {
        "default": "default",
        "supported": [
          "default"
        ]
      },
      "capabilities": {
        "wasi": {},
        "host": {}
      },
      "wasm": "components/messaging-provider-slack.wasm"
    }
  ],
  "extensions": {
    "greentic.ext.provider": {
      "kind": "greentic.ext.provider",
      "version": "1.0.0",
      "inline": {
        "providers": [
          {
            "kind": "messaging",
            "provider_type": "messaging.slack.api",
            "capabilities": [
              "messaging"
            ],
            "ops": [
              "send",
              "reply"
            ],
            "config_schema_ref": "schemas/messaging/slack/config.schema.json",
            "state_schema_ref": "",
            "runtime": {
              "component_ref": "messaging-provider-slack",
              "export": "schema-core-api",
              "world": "greentic:provider/schema-core@1.0.0"
            },
            "docs_ref": ""
          }
        ]
      }
    }
  },
  "secret_requirements": [
    {
      "name": "SLACK_BOT_TOKEN",
      "scope": "tenant",
      "description": "Slack bot token used for chat.postMessage calls."
    },
    {
      "name": "SLACK_SIGNING_SECRET",
      "scope": "tenant",
      "description": "Slack signing secret (optional for future webhook validation)."
    }
  ]
}
